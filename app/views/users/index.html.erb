<h2>Welcome To <span style="font-family: Lucida-Calligraphy;">WormTurn</span></h2>

<% if current_user %>
  <p>
    <%= current_user.email %> ... is a valued worm turner!
  </p>
  <%= link_to "Log-Out", log_out_path, method: :delete %>

<% else %>
  <%= link_to "Log-In", log_in_path %>
  <%= link_to "New User", users_new_path %>
<% end %>


<ul>
  <% @users.each do |user| %>
    <li>
      <%= user.email %>
    </li>
  <% end %>
</ul>
